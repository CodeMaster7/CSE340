<!-- Account Management view with BEM structure -->
<section class="account-management">
	<div class="account-management__container">
		<!-- Page header -->
		<% if (title) { %>
		<header class="account-management__header">
			<h1 class="account-management__title"><%= title %></h1>
		</header>
		<% } else { res.redirect('/') } %>

		<!-- Flash messages -->
		<div class="account-management__messages"><%- messages() %></div>

		<!-- Validation errors -->
		<% if (errors) { %>
		<ul class="error">
			<% errors.array().forEach(error => { %>
			<li><%= error.msg %></li>
			<% }) %>
		</ul>
		<% } %>

		<!-- Main content -->
		<div class="account-management__content">
			<!-- Personalized greeting for all account types -->
			<h2 class="account-management__greeting">Welcome <%= locals.accountData.account_firstname %></h2>

			<!-- Update account information link (for all users) -->
			<div class="account-management__actions">
				<p class="account-management__action">
					<a href="/account/update/<%= locals.accountData.account_id %>" class="account-management__link">
						Update Account Information
					</a>
				</p>
			</div>

			<!-- Inventory Management section (Employee and Admin only) -->
			<% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
			<div class="account-management__admin-section">
				<h3 class="account-management__admin-heading">Inventory Management</h3>
				<p class="account-management__admin-action">
					<a href="/inv/" class="account-management__admin-link">Manage Inventory</a>
				</p>
			</div>
			<% } %>
		</div>
	</div>
</section>
