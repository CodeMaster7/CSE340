<!-- Vehicle detail view with BEM structure -->
<section class="vehicle-detail-page">
	<div class="vehicle-detail-page__container">
		<!-- Vehicle detail header -->
		<% if (title) { %>
		<header class="vehicle-detail-page__header">
			<h1 class="vehicle-detail-page__title"><%= title %></h1>
		</header>
		<% } else { res.redirect('/') } %>

		<!-- Error messages -->
		<div class="vehicle-detail-page__messages"><%# messages() %></div>

		<!-- Vehicle detail content -->
		<div class="vehicle-detail-page__content"><%- vehicleHTML %></div>

		<!-- Favorites: add button (visible to logged-in Clients only) -->
		<% if (locals && locals.loggedin && locals.accountData && locals.accountData.account_type === 'Client' && typeof
		inv_id !== 'undefined') { %>
		<form action="/account/favorites/<%= inv_id %>" method="post" class="vehicle-detail-page__favorite-form">
			<button type="submit" class="vehicle-detail-page__favorite-button">Add to favorites</button>
		</form>
		<% } %>
	</div>
</section>
